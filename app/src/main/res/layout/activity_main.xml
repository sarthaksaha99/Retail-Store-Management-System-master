<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include
        android:id="@+id/main_activity_toolbar"
        layout="@layout/toolbar_layout">
    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_activity_toolbar"
        android:id="@+id/adminsUI">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:id="@+id/title_view"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/tvadminName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Welcome to Retail Store Management"
                        />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_layout"
                android:layout_below="@+id/title_view"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="18dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:id="@+id/btnViewProduct">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/product"/>

                            <TextView
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="center_horizontal"
                                android:text="View Product"
                                android:textAlignment="center"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="18dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:id="@+id/btnPayBills">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/cart" />

                            <TextView
                                android:layout_width="118dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="center_horizontal"
                                android:text="Pay Bills"
                                android:textAlignment="center"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="18dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:id="@+id/btnViewProfile">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/profile"/>

                            <TextView
                                android:layout_width="112dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="center_horizontal"
                                android:text="View Profile"
                                android:textAlignment="center"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="18dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:id="@+id/btnHistory">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/history"/>

                            <TextView
                                android:layout_width="124dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="center_horizontal"
                                android:text="Purchase History"
                                android:textAlignment="center"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>












                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/am_layout"
                    android:layout_below="@+id/title_view"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="160dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:columnOrderPreserved="false">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="18dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:id="@+id/btnViewProductm">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/product"/>

                                <TextView
                                    android:layout_width="118dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:gravity="center_horizontal"
                                    android:text="View Product"
                                    android:textAlignment="center"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="18dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:id="@+id/btnAddProduct">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/addproduct" />

                                <TextView
                                    android:layout_width="118dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:gravity="center_horizontal"
                                    android:text="Add Product"
                                    android:textAlignment="center"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="18dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:id="@+id/btnViewProfilem">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/profile"/>

                                <TextView
                                    android:layout_width="112dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:gravity="center_horizontal"
                                    android:text="View Profile"
                                    android:textAlignment="center"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="130dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="18dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:id="@+id/btnHistorym">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/customer"/>

                                <TextView
                                    android:layout_width="124dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:gravity="center_horizontal"
                                    android:text="Customer Tracking"
                                    android:textAlignment="center"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </GridLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adminll"
                    android:layout_below="@+id/am_layout"
                    android:visibility="visible"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:alignmentMode="alignMargins"
                        android:columnCount="1"
                        android:rowCount="1"
                        android:columnOrderPreserved="false">

                        <androidx.cardview.widget.CardView
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="18dp"
                            app:cardElevation="6dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:id="@+id/btnManager">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:background="@drawable/manager"/>

                                <TextView
                                    android:layout_width="118dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="monospace"
                                    android:gravity="center_horizontal"
                                    android:text="Managers"
                                    android:textAlignment="center"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llmsg"
                    android:layout_below="@+id/title_view"
                    android:layout_marginTop="220dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:padding="5dp"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_gravity="center_horizontal"
                        android:text="You are temporarily blocked by Admin" />

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>