<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentActivity">

    <include
        android:id="@+id/payment_activity_toolbar"
        layout="@layout/toolbar_layout">
    </include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_details_bill"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Total Product and bill"
        android:padding="4dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_credit_card"
        android:layout_below="@+id/tv_details_bill"
        android:layout_alignParentStart="true"
        android:hint="Enter Credit Card Number"
        android:inputType="number"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_secuirity_code"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card"
        android:hint="Enter Secuirity Code"
        android:inputType="number"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_expire_date"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_secuirity_code"
        android:hint="Enter Expire Date (yyyy-mm-dd)"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_confirm_pay"
        android:layout_below="@+id/et_expire_date"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:text="Confirm Payment"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button"/>

</RelativeLayout>