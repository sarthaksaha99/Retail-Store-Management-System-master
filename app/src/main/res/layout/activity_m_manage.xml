<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mManageActivity">
    <include
        android:id="@+id/mm_activity_toolbar"
        layout="@layout/toolbar_layout">
    </include>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_below="@id/mm_activity_toolbar"
        android:paddingTop="50dp"
        android:paddingStart="20dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvNameofmm"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01868406894"
        android:layout_below="@id/tvNameofmm"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvphnOfmm"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Checked"
        android:layout_below="@id/tvphnOfmm"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:textSize="13dp"
        android:textColor="#78C4E8"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:id="@+id/tvCheckmm"
        />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCheckmm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/adButtonsmm">

        <Button
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCheckmm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Unblock"
            android:id="@+id/acceptmm"/>

        <Button
            android:id="@+id/declinemm"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Block" />

    </LinearLayout>
</RelativeLayout>